

<div class="fui-form-checkbox">
    {{#if label}}
    <label class="fui-form-ele-label">{{label}}</label>
    {{/if}}
    <div class="fui-form-ele-container">
        <div class="right">
            <button class="fui-form-field">
                <span class="fui-form-checkbox-icon">
                    <span data-form-checkbox-checkmark class="fui-form-checkbox-checkmark icon"></span>
                </span>
                <span class="fui-form-checkbox-text">{{text}}</span>
            </button>
        </div>
    </div>
</div>